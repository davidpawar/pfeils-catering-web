---
import Button from "../ui/Button.astro";

interface Props {
  /** Badge text above the title. */
  badge: string;
  /** Button label. */
  buttonText: string;
  /** Target URL for the button. */
  href: string;
  /** Section heading. */
  title: string;
  /** Color theme: light (white), dark, or grey. */
  theme?: "light" | "dark" | "grey";
}

const { badge, buttonText, href, title, theme = "light" } = Astro.props;

const isDark = theme === "dark";
const isGrey = theme === "grey";

const sectionBgClass = isDark
  ? "bg-dark-bg"
  : isGrey
    ? "bg-slate-100"
    : "bg-white";

const titleClass = isDark ? "text-white" : "text-dark";

---

<section class:list={["relative overflow-hidden", sectionBgClass]}>
  <div class="mx-auto max-w-7xl px-6 py-16 md:px-12 md:py-24 lg:px-16 lg:py-28">
    <div class="flex flex-col items-center text-center">
      <!-- Badge -->
      <div class="fade-in-section mb-4 md:mb-6">
        <div class="inline-block rounded-tl-xl rounded-br-xl bg-gradient-to-r from-primary to-primary-light px-3 py-1">
          <h3 class="font-outfit text-sm uppercase tracking-wider text-white leading-[1.3] md:text-base">
            {badge}
          </h3>
        </div>
      </div>

      <!-- Title -->
      <h2
        class:list={[
          "fade-in-section delay-200 font-anton text-3xl leading-tight md:text-4xl lg:text-5xl",
          titleClass,
        ]}
      >
        {title}
      </h2>

      <!-- Button -->
      <div class="fade-in-section delay-200 mt-8 md:mt-10">
        <Button
          href={href}
          class="cta-shake rounded-full transition-transform duration-300 hover:scale-105"
        >
          {buttonText}
        </Button>
      </div>
    </div>
  </div>
</section>
