---
/**
 * Single FAQ item.
 */
interface FAQItem {
  /**
   * The answer/response text.
   */
  answer: string;
  /**
   * The question text.
   */
  question: string;
}

interface Props {
  /**
   * Optional badge text above the section title.
   */
  badge?: string;
  /**
   * Optional description paragraph under the section title.
   */
  description?: string;
  /**
   * List of FAQ items (question/answer pairs).
   */
  items: FAQItem[];
  /**
   * Section heading.
   */
  title: string;
  /**
   * Color theme: light (white), dark, or grey (bg-slate-100).
   */
  theme?: "light" | "dark" | "grey";
}

const { badge, description, items, theme = "light", title } = Astro.props;

/* Derived values */
const answerClass = theme === "dark" ? "text-white/80" : "text-dark/70";
const descClass = theme === "dark" ? "text-white/80" : "text-dark/70";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: items.map((item) => ({
    "@type": "Question",
    name: item.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: item.answer,
    },
  })),
};

const hasItems = items.length > 0;
const isDark = theme === "dark";
const isGrey = theme === "grey";

const itemBgClass = isDark
  ? "bg-white/5"
  : isGrey
    ? "bg-white"
    : "bg-slate-100";

const questionClass = isDark ? "text-white" : "text-dark";
const questionMarkClass = isDark ? "text-slate-600" : "text-slate-400";

const sectionBgClass = isDark
  ? "bg-dark-bg"
  : isGrey
    ? "bg-slate-100"
    : "bg-white";

const titleClass = isDark ? "text-white" : "text-dark";
---

{
  hasItems && (
    <>
      {/* FAQ: Section with question/answer cards */}
      <section class:list={["relative overflow-hidden", sectionBgClass]}>
        {/* JSON-LD FAQPage schema for SEO */}
        <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
        <div class="mx-auto max-w-7xl px-6 py-12 md:px-12 md:py-20 lg:px-16 lg:py-24">
          {/* Section header: badge, title, description (optional) */}
          {(badge || title || description) && (
            <div class="fade-in-section mb-8 max-w-4xl md:mb-12">
              {badge && (
                <div class="mb-4 inline-block rounded-tl-xl rounded-br-xl bg-gradient-to-r from-primary to-primary-light px-3 py-1 md:mb-6">
                  <h3 class="font-outfit text-sm uppercase tracking-wider text-white leading-[1.3] md:text-base">
                    {badge}
                  </h3>
                </div>
              )}
              {title && (
                <h2
                  class:list={[
                    "font-anton text-3xl leading-tight md:text-4xl lg:text-5xl",
                    titleClass,
                  ]}
                >
                  {title}
                </h2>
              )}
              {description && (
                <p
                  class:list={[
                    "mt-1 text-base font-light leading-relaxed md:text-lg",
                    descClass,
                  ]}
                >
                  {description}
                </p>
              )}
            </div>
          )}

          {/* FAQ items: grid of question/answer cards */}
          <div class="fade-in-section delay-200 grid gap-6 sm:grid-cols-2">
            {items.map((item, i) => (
              <article
                class:list={[
                  "flex flex-col rounded-br-4xl p-6 transition-shadow hover:shadow-lg md:p-8",
                  itemBgClass,
                  i === 1 && "delay-200",
                  i === 2 && "delay-200",
                ]}
              >
                {/* Question mark icon (circle) */}
                <div class:list={["mb-4 h-10 w-10 shrink-0", questionMarkClass]}>
                  <svg
                    aria-hidden="true"
                    viewBox="0 0 512 512"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    class="h-full w-full"
                  >
                    <path
                      d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM169.8 165.3c7.9-22.3 29.1-37.3 52.8-37.3h58.3c34.9 0 63.1 28.3 63.1 63.1c0 22.6-12.1 43.5-31.7 54.8L280 264.4c-.2 13-10.9 23.6-24 23.6c-13.3 0-24-10.7-24-24V250.5c0-8.6 4.6-16.5 12.1-20.8l44.3-25.4c4.7-2.7 7.6-7.7 7.6-13.1c0-8.4-6.8-15.1-15.1-15.1H222.6c-3.4 0-6.4 2.1-7.5 5.3l-.4 1.2c-4.4 12.5-18.2 19-30.6 14.6s-19-18.2-14.6-30.6l.4-1.2zM224 352a32 32 0 1 1 64 0 32 32 0 1 1 -64 0z"
                    />
                  </svg>
                </div>
                <h3
                  class:list={[
                    "mb-3 font-outfit text-lg font-semibold md:text-xl",
                    questionClass,
                  ]}
                >
                  {item.question}
                </h3>
                <p
                  class:list={[
                    "font-outfit text-base leading-relaxed md:text-lg",
                    answerClass,
                  ]}
                >
                  {item.answer}
                </p>
              </article>
            ))}
          </div>
        </div>
      </section>
    </>
  )
}
