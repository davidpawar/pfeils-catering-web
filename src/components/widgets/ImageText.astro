---
interface Props {
  /*
   * Small badge headline shown above the main title.
   */
  badgeText: string;
  /*
   * Supporting paragraph below the heading.
   */
  description: string;
  /*
   * Accessible alt text for the section image.
   */
  imageAlt: string;
  /*
   * Image source URL for the left visual block.
   */
  imageSrc: string;
  /*
   * Description text for the left statistic.
   */
  leftStatLabel: string;
  /*
   * Prefix label for the left statistic, e.g. "seit".
   */
  leftStatPrefix: string;
  /*
   * Numeric/value part of the left statistic.
   */
  leftStatValue: string;
  /*
   * Description text for the right statistic.
   */
  rightStatLabel: string;
  /*
   * Numeric/value part of the right statistic.
   */
  rightStatValue: string;
  /*
   * Main heading text of the content area.
   */
  title: string;
}

const {
  badgeText,
  description,
  imageAlt,
  imageSrc,
  leftStatLabel,
  leftStatPrefix,
  leftStatValue,
  rightStatLabel,
  rightStatValue,
  title,
} = Astro.props;
---

<section class="relative max-w-full">
  <div class="mx-auto flex max-w-7xl flex-col gap-8 px-6 py-12 md:flex-row md:gap-12 md:px-12 md:py-20 lg:gap-20 lg:px-16 lg:py-28">
    <div class="fade-in-section flex w-full justify-center md:w-1/2 md:justify-end">
      <div class="aspect-[4/3] w-full overflow-hidden rounded-br-4xl md:aspect-square">
        <img src={imageSrc} alt={imageAlt} class="h-full w-full object-cover" />
      </div>
    </div>

    <div
      class="fade-in-section delay-200 flex flex-1 flex-col justify-center gap-4 md:gap-6"
    >
      <div>
        <div
          class="mb-4 inline-block rounded-tl-xl rounded-br-xl bg-gradient-to-r from-primary to-primary-light px-3 py-1 md:mb-6"
        >
          <h2
            class="font-outfit text-sm uppercase tracking-wider text-white leading-[1.3] md:text-base"
          >
            {badgeText}
          </h2>
        </div>
      </div>

      <div>
        <p class="font-anton text-3xl leading-tight text-dark md:text-4xl lg:text-5xl">
          {title}
        </p>
      </div>

      <div>
        <p class="text-base font-light leading-relaxed text-dark/70 md:text-lg">
          {description}
        </p>
      </div>

      <div class="mt-2 grid grid-cols-2 gap-6 md:gap-10">
        <div class="flex flex-col gap-2 md:gap-3">
          <div class="flex items-center gap-1">
            <div class="font-outfit text-lg text-primary md:text-2xl">
              {leftStatPrefix}
            </div>
            <div
              class="font-outfit text-4xl font-semibold tracking-wide text-primary leading-none md:text-5xl lg:text-6xl"
            >
              {leftStatValue}
            </div>
          </div>
          <p class="font-outfit text-base text-dark md:text-xl">{leftStatLabel}</p>
        </div>

        <div class="flex flex-col gap-2 md:gap-3">
          <div
            class="font-outfit text-4xl font-semibold tracking-wide text-primary leading-none md:text-5xl lg:text-6xl"
          >
            {rightStatValue}
          </div>
          <p class="font-outfit text-base text-dark md:text-xl">{rightStatLabel}</p>
        </div>
      </div>
    </div>
  </div>
</section>
