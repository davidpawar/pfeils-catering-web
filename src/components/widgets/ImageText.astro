---
interface Props {
  /*
   * Small badge headline shown above the main title.
   */
  badgeText: string;
  /*
   * Supporting paragraph below the heading.
   */
  description: string;
  /*
   * Accessible alt text for the section image.
   */
  imageAlt: string;
  /*
   * Image source URL for the left visual block.
   */
  imageSrc: string;
  /*
   * Description text for the left statistic.
   */
  leftStatLabel: string;
  /*
   * Prefix label for the left statistic, e.g. "seit".
   */
  leftStatPrefix: string;
  /*
   * Numeric/value part of the left statistic.
   */
  leftStatValue: string;
  /*
   * Description text for the right statistic.
   */
  rightStatLabel: string;
  /*
   * Numeric/value part of the right statistic.
   */
  rightStatValue: string;
  /*
   * Main heading text of the content area.
   */
  title: string;
}

const {
  badgeText,
  description,
  imageAlt,
  imageSrc,
  leftStatLabel,
  leftStatPrefix,
  leftStatValue,
  rightStatLabel,
  rightStatValue,
  title,
} = Astro.props;
---

<section class="relative max-w-full">
  <div class="mx-auto flex max-w-7xl gap-20 px-16 py-28">
    <div class="fade-in-section flex w-1/2 justify-end">
      <div class="aspect-square w-full overflow-hidden rounded-br-4xl">
        <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" />
      </div>
    </div>

    <div
      class="fade-in-section delay-200 flex-1 flex flex-col justify-center gap-4"
    >
      <div>
        <div
          class="mb-6 inline-block rounded-tl-xl rounded-br-xl bg-gradient-to-r from-primary to-primary-light px-3 py-1"
        >
          <h2
            class="font-outfit text-base uppercase tracking-wider text-white leading-[1.3]"
          >
            {badgeText}
          </h2>
        </div>
      </div>

      <div>
        <p class="font-anton text-5xl leading-[1.2] text-dark">
          {title}
        </p>
      </div>

      <div>
        <p class="text-lg font-light leading-relaxed text-dark/70">
          {description}
        </p>
      </div>

      <div class="grid grid-cols-2 gap-10 mt-2">
        <div class="flex flex-col gap-3">
          <div class="flex items-center gap-1">
            <div class="font-outfit text-2xl text-primary">
              {leftStatPrefix}
            </div>
            <div
              class="font-outfit text-6xl font-semibold tracking-wide text-primary leading-none"
            >
              {leftStatValue}
            </div>
          </div>
          <p class="font-outfit text-xl text-dark">{leftStatLabel}</p>
        </div>

        <div class="flex flex-col gap-3">
          <div
            class="font-outfit text-6xl font-semibold tracking-wide text-primary leading-none"
          >
            {rightStatValue}
          </div>
          <p class="font-outfit text-xl text-dark">{rightStatLabel}</p>
        </div>
      </div>
    </div>
  </div>
</section>
