---
import Button from "../ui/Button.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const heroImageUrl =
  "https://pfeils-catering.de/wp-content/uploads/2025/04/Thomas-Firmenfeier-neu-dunkel-scaled.jpg";
---

{/* HeroFirmenfeier: Full-width hero for Firmenfeier page with background image */}
<section
  class="relative flex min-h-[85vh] flex-col justify-center bg-dark-bg bg-cover bg-center bg-no-repeat"
  style={{
    backgroundImage: `url('${heroImageUrl}')`,
  }}
>
  <div
    class="absolute inset-0 bg-gradient-to-r from-black/75 via-black/50 to-black/30"
  >
  </div>

  {/* Content container */}
  <div
    class="relative z-10 mx-auto flex w-full max-w-7xl flex-col justify-center px-6 py-16 md:px-12 md:py-24 lg:px-16 lg:py-32"
  >
    <div class="max-w-3xl">
      {/* Badge: small label above title */}
      <p
        class="mb-2 font-outfit text-sm font-medium uppercase tracking-wider text-primary-light md:text-base"
      >
        {t("hero.firmenfeier.subtitle")}
      </p>
      {/* Title: main heading */}
      <h1
        class="mb-4 font-anton text-3xl font-medium leading-tight text-white md:text-4xl lg:text-5xl xl:text-6xl"
      >
        {t("hero.firmenfeier.title")}
      </h1>
      {/* Description: short intro */}
      <p class="mb-4 font-outfit text-lg font-medium text-white md:text-xl">
        {t("hero.firmenfeier.description")}
      </p>
      {/* Paragraph: longer description */}
      <p class="mb-8 font-outfit text-base leading-relaxed text-white/90 md:text-lg">
        {t("hero.firmenfeier.paragraph")}
      </p>

      {/* Bullet list: key benefits */}
      <ul
        class="mb-10 grid grid-cols-1 gap-3 font-outfit text-white/95 sm:grid-cols-2"
      >
        <li class="flex items-center gap-2">
          <span class="text-primary-light">✓</span>
          {t("hero.firmenfeier.bullet1")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-primary-light">✓</span>
          {t("hero.firmenfeier.bullet2")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-primary-light">✓</span>
          {t("hero.firmenfeier.bullet3")}
        </li>
        <li class="flex items-center gap-2">
          <span class="text-primary-light">✓</span>
          {t("hero.firmenfeier.bullet4")}
        </li>
      </ul>

      {/* CTA button */}
      <Button href={translatePath("/anfrage/")}>{t("hero.cta")}</Button>
    </div>
  </div>
</section>
