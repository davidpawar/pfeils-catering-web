---
import { imageProvider } from "../../provider/imageProvider";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const heroImageUrl =
  typeof imageProvider.hero.headerBackground.src === "object"
    ? imageProvider.hero.headerBackground.src.src
    : imageProvider.hero.headerBackground.src;
---

{/* HeroAnfrage: Hero for Anfrage/Contact page */}
<section
  class="relative flex min-h-[50vh] flex-col justify-center bg-dark-bg bg-cover bg-center bg-no-repeat md:min-h-[60vh]"
  style={{
    backgroundImage: `url('${heroImageUrl}')`,
  }}
>
  <div
    class="absolute inset-0 bg-gradient-to-r from-black/75 via-black/50 to-black/30"
  >
  </div>

  <div
    class="relative z-10 mx-auto flex w-full max-w-7xl flex-col justify-center px-6 py-16 md:px-12 md:py-24 lg:px-16 lg:py-28"
  >
    <div class="max-w-3xl">
      <p
        class="mb-2 font-outfit text-sm font-medium uppercase tracking-wider text-primary-light md:text-base"
      >
        {t("hero.anfrage.subtitle")}
      </p>
      <h1
        class="font-anton text-3xl font-medium leading-tight text-white md:text-4xl lg:text-5xl xl:text-6xl"
      >
        {t("hero.anfrage.title")}
      </h1>
      <p class="mt-4 font-outfit text-base leading-relaxed text-white/90 md:text-lg">
        {t("hero.anfrage.description")}
      </p>
    </div>
  </div>
</section>
