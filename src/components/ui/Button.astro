---
/**
 * Reusable primary CTA button with gradient styling.
 * Matches the Hero button design.
 */
interface Props {
  /**
   * Optional additional CSS classes (e.g. for margin).
   */
  class?: string;
  /**
   * Target URL for the link.
   */
  href: string;
}

const { href, class: className = "" } = Astro.props;
---

<a
  href={href}
  class:list={[
    "inline-flex min-h-12 w-fit items-center justify-center rounded-full bg-gradient-to-r from-primary to-primary-light px-6 py-3 font-outfit text-base font-medium text-white transition-all duration-300 hover:shadow-lg md:min-h-14 md:px-8 md:py-4 md:text-lg",
    className,
  ]}
>
  <slot />
</a>
